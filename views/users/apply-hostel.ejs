<% include('../layouts/header') %>

<h1>User Registration</h1>

<form action="" method="post">
    <input type="text" name="name" placeholder="Enter Name" required>
    <br><br>

    <input type="text" name="dept" placeholder="Enter Department" required>
    <br><br>

    <input type="text" name="reg_no" placeholder="Enter Registration No." required>
    <br><br>

    <input type="text" name="semester" placeholder="Enter Semester" required>
    <br><br>

    <input type="text" name="address" placeholder="Enter Present Address" required>
    <br><br>

    <input type="text" name="guardian_name" placeholder="Enter Guardian Name" required>
    <br><br>

    <input type="text" name="guardian_phone" placeholder="Enter Guardian Contact No" required>
    <br><br>

    <select type="text" name="gender" placeholder="Select your Gender" required>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select> 
   

    <input type="submit" value="Apply">

</form>

