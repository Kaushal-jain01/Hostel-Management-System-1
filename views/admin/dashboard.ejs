<body>

<style>
    table,
    th,
    td {
      padding: 10px;
      border: 1px solid black;
      border-collapse: collapse;
    }
  </style>

<h1>Dashboard</h1>

<br>

<table width="70%" >
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone No.</th>
    </tr>

    <% 
        if(users.length > 0 )
        {
            for(i=0; i<users.length; i++){
                %>

                <tr>
                    <td>
                    <%= users[i].name %>
                    </td>   
                    
                    <td>                   
                    <%= users[i].email %>          
                    </td>  

                    <td>            
                    <%= users[i].phone %>
                    </td>  

                     
                </tr>

                <%
            }
        }
        else{
            %>

            <tr>
                <td colspan="5">Users not found.</td>
            </tr>

            <%
        }
     %>
</table>


<br><br>

<h3>Hostels data:</h3>


<table width="70%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Capacity</th>
    </tr>
  </thead>
  <tbody>
    <% hostels.forEach(function(hostel) { %>
      <tr>
        <td><a href="/admin/hostel-details?id=<%= hostel.name%>"><%= hostel.name %></a></td>
        <td><%= hostel.address %></td>
        <td><%= hostel.contact %></td>
        <td><%= hostel.rooms.length %></td>
      </tr>
    <% }); %>
  </tbody>
</table>


<a href="/admin/home">Go to Home</a>

</body>
