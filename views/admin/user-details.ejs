

<table class="table table-hover table-bordered" width="70%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Registration No.</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Semester</th>
            <th>Guardian Name</th>
            <th>Guardian Phone</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Hostel Name</th>
            <th>Room No.</th>
        </tr>
    </thead>
    <tbody>
        <% userData.forEach(function(user) {
            if (user) { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.reg_no %></td>
                <td><%= user.phone %></td>
                <td><%= user.dept %></td>
                <td><%= user.semester %></td>
                <td><%= user.guardian_name %></td>
                <td><%= user.guardian_phone %></td>
                <td><%= user.address %></td>
                <td><%= user.gender %></td>
                <td>
                    <% if (user.hostel_allocated) { %>  
                    <%= user.hostel_allocated.hostel_name %>
                    <% } %>
                </td>
                <td>
                    <% if (user.hostel_allocated) { %>
                    <%= user.hostel_allocated.room_no %>
                    <% } %>
                </td>
            </tr>
            <% } %>
        <% }); %>
    </tbody>
</table class="table table-hover table-bordered">
