<body>

    <h1>Add Warden data</h1>

    <form action="" method="post">
        <input class="form-control" type="text" name="name" placeholder="Enter Name" required>
        <br>

        <input class="form-control" type="text" name="phone" placeholder="Enter Phone" required>
        <br>

        <input class="form-control" type="text" name="address" placeholder="Enter address" required>
        <br>

        <input class="form-control" type="email" name="email" placeholder="Enter Email." required>
        <br>

        <input class="form-control" type="password" name="password" placeholder="Enter password" required>
        <br>

        <select type="text" name="hostel_name" placeholder="Select the name of hostel" required>
            <% hostelsData.forEach(function(hostel) { %>
                <option value="<%= hostel.name %>"><%= hostel.name %></option>
              <% }); %>
            
        </select>  
         
            <br>

            <input type="submit" class="btn btn btn-primary" value="Add">

    </form>

    <% if(typeof message!=='undefined' ){ %>

        <h3 style="color: green">
            <%= message %>
        </h3>

        <% } %>


</body>